@font-face {
    font-family: 'Y_Spotlight';
    src: url('../font/Y_Spotlight.woff') format('woff');
    font-weight: normal;
    font-style: normal;
}

html,
body {position: relative; height: 100%; font-size: 15px; font-family:'Y_Spotlight', sans-serif !important; padding: 0; margin: 0;}

/* 롤링배너 */
.swiper {width: 100%;}
.swiper-slide {text-align: center;font-size: 18px; background: #fff;
    /* Center slide text vertically */
    display: -webkit-box; display: -ms-flexbox;display: -webkit-flex;display: flex; -webkit-box-pack: center; -ms-flex-pack: center;  -webkit-justify-content: center;  justify-content: center;  -webkit-box-align: center;  -ms-flex-align: center;  -webkit-align-items: center;  align-items: center;}

.swiper-slide img {display: block; width: 100%; height: 100%; object-fit: cover; border-radius: 10px;}

.f_box{width: 85%; position: absolute;}
.f_box p{font-size: 18px; text-align: left; line-height: 4px; font-weight: bold; color: #fff;}
.f_box p.sub{font-size: 15px; text-align: left; font-weight: normal; padding-top: 8px; font-family: 'Noto Sans KR', sans-serif; }
.f_box p.sub02{font-size: 13px; text-align: left; font-weight: normal; font-family: 'Noto Sans KR', sans-serif;}
/* //롤링배너 */

/* 통이미지 */
.img {width: 100%;}
.img img {width: 100%; border-radius: 10px; margin-top:10px;}
/* //통이미지 */

@media screen and (min-width:600px){
    .f_box p { font-size:26px;}
    .f_box p.sub {font-size:17px;}
    .f_box p.sub02 {font-size:15px;}
}

@media screen and (min-width:800px){
    .f_box p { font-size:36px;}
    .f_box p.sub {font-size:27px;}
    .f_box p.sub02 {font-size:19x;}
}

@font-face {
    font-family: 'Y_Spotlight';
    src: url('../font/Y_Spotlight.woff') format('woff');
    font-weight: normal;
    font-style: normal;
}
.notosanskr * {font-family: 'Noto Sans KR', sans-serif;}

html,body {position: relative; height: 100%; font-size: 15px; font-family:'Noto Sans KR', sans-serif !important; padding: 0; margin: 0;}
button {border: 0; outline: 0;}

.intro {background-color: #00B5B6; position:relative; padding:0px 40px 0px 15px; display:flex; align-items:center; border-radius: 8px;}
.intro .name {line-height:1.3; font-size: 13px; color: #fff; font-weight: normal;overflow: hidden;text-overflow: ellipsis;display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;}
.name_front {margin-left :50px;}
.intro .btn { position:absolute; right:0.8rem; top:50%; margin-top:-0.6rem; cursor:pointer}
.btn.btn_detail2 { width:20px; height:20px; background:no-repeat center / 18px auto; background-image:url(../images/ico_next_dis.png);}
.btn_front { position: absolute;width:35px; height:35px; border-radius: 50%;background:no-repeat center / 35px auto; background-image:url(../images/front.png);}